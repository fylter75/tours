<?xml version="1.0" encoding="utf-8"?>
<odoo>


    <record id ="account_invoice_view_extend_form" model="ir.ui.view">
        <field name="name">account.invoice.form.view</field>
        <field name="model">account.invoice</field>
        <field name ="inherit_id" ref="account.invoice_form"/>
        <field name="arch" type ="xml">
            <xpath expr="//form/sheet/notebook/page[@name='other_info']/group/group/field[@name='origin']" position="after">
                <field name="so_order_id"/>
            </xpath>
        </field>
     </record>

    <record id ="product_view_extend_form" model="ir.ui.view">
        <field name="name">product.form.view</field>
        <field name="model">product.template</field>
        <field name ="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type ="xml">
            <xpath expr="//form/sheet/notebook/page[@name='sales']" position="after">
                <page name="docs" string="Documents">
                    <field name="visa_doc_ids">
                        <tree editable="top">
                            <field name="visa_docs_id" required="1"/>
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
     </record>
     
    <record id ="product_view_extend_form1" model="ir.ui.view">
        <field name="name">product.form.view1</field>
        <field name="model">product.template</field>
        <field name ="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type ="xml">
            <xpath expr="//form/sheet/notebook/page[@name='sales']" position="after">
                <page name='facilities' string='Facilities' >
                    <field name='facility_ids'>
                        <tree editable='top'>
                            <field name="name" required="1"/>
                        </tree>
                        <form>
                            <group>
                                <field name='name'/>
                            </group>
                        </form>
                    </field>
                </page>
            </xpath>
        </field>
     </record>
    
    <!-- form view of hotel facilties -->
    <record id="form_view_product_facility" model='ir.ui.view'>
        <field name='name'>form.view.product.facility</field>
        <field name="model">product.facility</field>
        <field name='arch' type='xml'>
            <form string="Facility">
                <sheet>
                    <group>
                        <field name="name" class="oe_inline" required="1"/>
                        <field name="icon_class" class="oe_inline"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    
    <!-- tree view of hotel facilties -->
    <record id="tree_view_product_facility" model='ir.ui.view'>
        <field name='name'>tree.view.product.facility</field>
        <field name="model">product.facility</field>
        <field name='arch' type='xml'>
            <tree string="Facility">
                <field name="name" class="oe_inline"/>
            </tree>
        </field>
    </record>
    
    <!-- action for hotel facility -->
    <record id='action_hotel_facility' model='ir.actions.act_window'>
        <field name="name">Hotel Facilities</field>
        <field name="res_model">product.facility</field>
        <field name='view_type'>form</field>
        <field name='view_mode'>tree,form</field>
    </record>
    
    <!-- menu for hotel facility -->
    <menuitem 
        id='menu_hotel_facility' 
        parent="menu_sale_package_configuration"
        action='action_hotel_facility'/>
    
</odoo>
